{
  "compilerOptions": {
    "strict": false,
    "strictFunctionTypes": true,
    "incremental": true,
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": false,
    "baseUrl": "./server",
    "outDir": "build"
  }
}